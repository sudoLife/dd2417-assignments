  "version": "0.2.0",
  "configurations": [
    {
      "name": "BigramTrainer",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-f",
        "${fileDirname}/data/small.txt",
        "-d",
        "${fileDirname}/small_model.txt"
      ]
    },
    {
      "name": "Generator",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-f", "${fileDirname}/small_model.txt", "-s", "i", "-n", "10"]
    },
    {
      "name": "Tester",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-f",
        "${fileDirname}/kafka_model.txt",
        "-t",
        "${fileDirname}/data/small.txt"
      ]
    }
  ]
}
